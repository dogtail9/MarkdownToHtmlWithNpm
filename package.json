    "img64": "^0.3.1",
    "live-reload": "^1.1.0",
    "markdown-toc": "^0.12.11",
    "remarkable": "^1.6.2",
    "replace-ext": "0.0.1",
    "rimraf": "^2.5.2"
  },
  "devDependencies": {
    "parallelshell": "^2.0.0"
  }
